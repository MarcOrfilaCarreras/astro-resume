<style>
    h2 {
        margin: 0;
        padding-bottom: 1em;

        text-transform: uppercase;
        letter-spacing: 0.1em;
        text-align: left;

        width: 100%;
    }

    span {
        color: #232D48;
    }

    svg {
        width: 32px;
        height: 32px;

        color: #232D48;
    }

    .container {
        display: grid;
        grid-template-columns: repeat(3, 1fr);
        gap: 16px;
        padding: 0 0 1em 0;
    }

    .event {
        padding-bottom: 0.5em;
        margin: 0;

        display: flex;
        align-content: center;
        flex-wrap: wrap;
        align-items: center;

        gap: 8px;
    }

    @media screen and (max-width: 480px) {
        h2 {
            font-size: 1.2em;
            padding-top: 0.75em;
        }

        .container {
            display: grid;
            grid-template-columns: repeat(2, 1fr);
            gap: 16px;
            padding: 0 0 1em 0;
        }
    }

    @media (min-width: 901px) and (max-width: 1200px) {
        .container {
            display: grid;
            grid-template-columns: repeat(4, 1fr);
            gap: 16px;
            padding: 0 0 1em 0;
        }
    }

    @media (min-width: 1201px) and (max-width: 1650px){
        .container {
            display: grid;
            grid-template-columns: repeat(2, 1fr);
            gap: 16px;
            padding: 0 0 1em 0;
        }
    }

    @media (min-width: 481px) and (max-width: 1400px) {
        h2 {
            padding-top: 1em;
        }
    }

</style>
