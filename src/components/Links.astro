---
import Config from '../config.json';
---
<hr>
<div>
    <a href={ 'mailto:' + Config.profile.email } class="header-link">
        <svg width="24" height="24" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round"><path stroke="none" d="M0 0h24v24H0z" fill="none"/><path d="M3 7a2 2 0 0 1 2 -2h14a2 2 0 0 1 2 2v10a2 2 0 0 1 -2 2h-14a2 2 0 0 1 -2 -2v-10z" /><path d="M3 7l9 6l9 -6" /></svg>
        <span>{ Config.profile.email }</span>
    </a>
    <a href={ Config.profile.website } target="_blank" class="header-link">
        <svg width="24" height="24" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round"><path stroke="none" d="M0 0h24v24H0z" fill="none"/><path d="M3 12a9 9 0 1 0 18 0a9 9 0 0 0 -18 0" /><path d="M3.6 9h16.8" /><path d="M3.6 15h16.8" /><path d="M11.5 3a17 17 0 0 0 0 18" /><path d="M12.5 3a17 17 0 0 1 0 18" /></svg>
        <span>{ Config.profile.website }</span>
    </a>
</div>
<hr>

<style>
    div {
        display: flex;
        flex-direction: row;
        justify-content: center;
        
        margin: 12px;

        gap: 48px;
    }

    hr {
        margin: 10px 20px 10px 20px;
        padding: 0;

        height: 1px;

        background-color: #DEE6EA;
        border: none;
    }

    a {
        display: flex;
        align-items: center;
        color: #232D48;
        text-align: center;
        text-decoration: none;
        cursor: pointer;
        gap: 8px;
    }

    a:hover {
        background-color: #FFFFFF;
        color: #1C2331;
    }

    a > span {
        float: right;
    }

    @media screen and (max-width: 480px) {
        div {
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
            
            margin: 12px;
            gap: 12px;
        }
    }

    @media (min-width: 481px) and (max-width: 600px) {
        div {
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
            
            margin: 12px;
            gap: 12px;
        }
    }

    @media (min-width: 601px) and (max-width: 768px) {
        div {
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
            
            margin: 12px;
            gap: 12px;
        }
    }

    @media (min-width: 769px) and (max-width: 900px) {
        div {
            display: flex;
            flex-direction: column;
            justify-content: center;
            align-items: center;
            
            margin: 12px;
            gap: 12px;
        }
    }
    
    @media (min-width: 901px) and (max-width: 1024px) {
        div {
            margin: 12px;
            gap: 12px;
        }
    }
</style>
